<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_small"
    app:cardCornerRadius="@dimen/margin_small_medium"
    app:cardElevation="@dimen/margin_small"
    app:contentPadding="@dimen/margin_small">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/margin_small_medium">
        <TextView
            android:id="@+id/textDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_medium"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:text="Detail du rapport"/>

        <TextView
            android:id="@+id/textPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prix du Rapport"
            android:textAlignment="textStart"
            android:textSize="@dimen/text_low"
            android:layout_below="@id/textDetail"
            android:layout_alignParentLeft="true"/>

        <ImageButton
            android:id="@+id/edit_DetailReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/margin_small_medium"
            android:layout_marginTop="@dimen/margin_small_medium"
            android:layout_marginEnd="@dimen/margin_small_medium"
            android:layout_marginBottom="@dimen/margin_small_medium"
            android:background="?attr/backgroundColor"
            app:srcCompat="@drawable/ic_delete" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>