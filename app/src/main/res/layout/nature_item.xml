<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_margin="@dimen/margin_small"
    app:cardCornerRadius="@dimen/margin_small_medium"
    app:cardElevation="@dimen/margin_small"
    app:contentPadding="@dimen/margin_small">
    <RelativeLayout
        android:id="@+id/layout_item_nature"
        android:padding="@dimen/margin_small_medium"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
        android:id="@+id/text_place_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_medium"
        android:text="Moramanga"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:fontFamily="sans-serif"
        android:layout_alignParentTop="true"
        />
        <TextView
            android:id="@+id/text_date_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_low"
            android:text="Date"
            android:layout_below="@id/text_place_item"
            android:fontFamily="sans-serif"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:id="@+id/checkbox_selected"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>